{
  "name": "@gardencss/designsystem",
  "description": "leroy merlin design system",
  "version": "0.0.0",
  "author": "GaÃ«l BOYENVAL <gaelboyenval@icloud.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/adeo/design-system--styleguide"
  },
  "keywords": [
    "gatsby"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.8.0",
    "chokidar": "^1.7.0",
    "directory-tree": "^2.1.0",
    "gatsby": "^2.0.19",
    "gatsby-plugin-manifest": "^2.0.5",
    "gatsby-plugin-offline": "^2.0.5",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sass": "^2.0.1",
    "gatsby-plugin-sharp": "^2.0.10",
    "gatsby-plugin-styled-components": "^3.0.0",
    "gatsby-remark-component": "^1.1.3",
    "gatsby-remark-copy-images": "^0.2.1",
    "gatsby-remark-images": "^2.0.5",
    "gatsby-remark-prismjs": "^3.0.2",
    "gatsby-source-filesystem": "^2.0.3",
    "gatsby-transformer-remark": "^2.1.7",
    "gatsby-transformer-sharp": "^2.1.6",
    "node-sass": "^4.9.4",
    "prism-themes": "^1.0.1",
    "prismjs": "^1.15.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-helmet": "^5.2.0",
    "rehype-react": "^3.0.3",
    "style-dictionary": "^2.6.2",
    "styled-components": "^4.0.2",
    "xstate": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.4.0",
    "@commitlint/config-conventional": "^7.3.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.14.2"
  },
  "scripts": {
    "tokens:build": "npx style-dictionary build --config ./packages/tokens/config.js",
    "tokens:clean": "npx style-dictionary clean --config ./packages/tokens/config.js",
    "tokens:clean-build": "yarn tokens:clean && yarn tokens:build",
    "clean-cache": "rm -rf ./.cache ./public",
    "css:fix": "npx stylelint npx stylelint src/patterns/**/*.scss packages/styles/**/*.scss --fix",
    "css:lint": "npx stylelint npx stylelint src/patterns/**/*.scss packages/styles/**/*.scss",
    "prebuild": "yarn tokens:build",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "predevelop": "yarn clean-cache && yarn tokens:clean-build",
    "format": "prettier --write '**/*.js'",
    "test": "echo \"Error: no test specified\" && exit 0",
    "registry": "cp -R src/styles registry && cp -R src/tokens registry && cp -R cssCompiler registry && cp -R static registry"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "stylelint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}