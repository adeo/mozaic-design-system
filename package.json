{
  "name": "@mozaic-ds/designsystem",
  "description": "leroy merlin design system",
  "version": "0.0.0",
  "author": "GaÃ«l BOYENVAL <gaelboyenval@icloud.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/adeo/design-system--styleguide"
  },
  "keywords": [
    "gatsby"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@mozaic-ds/gatsby-theme-styleguide": "^1.0.1-alpha",
    "adm-zip": "^0.4.12",
    "autoprefixer": "^9.4.3",
    "babel-plugin-styled-components": "^1.8.0",
    "chokidar": "^1.7.0",
    "css-mqpacker": "^7.0.0",
    "gatsby": "2.4.3",
    "gatsby-plugin-manifest": "^2.0.5",
    "gatsby-plugin-mixpanel": "^3.0.2",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sass": "^2.0.1",
    "gatsby-plugin-sharp": "^2.0.10",
    "gatsby-plugin-styled-components": "^3.0.0",
    "gatsby-remark-component": "^1.1.3",
    "gatsby-remark-copy-images": "^0.2.1",
    "gatsby-remark-images": "^2.0.5",
    "gatsby-remark-prismjs": "^3.0.2",
    "gatsby-source-filesystem": "^2.0.3",
    "gatsby-transformer-json": "^2.1.11",
    "gatsby-transformer-remark": "^2.1.7",
    "gatsby-transformer-sharp": "^2.1.6",
    "glob": "^7.1.3",
    "node-sass": "^4.9.4",
    "prism-themes": "^1.0.1",
    "prismjs": "^1.15.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-helmet": "^5.2.0",
    "rehype-react": "^3.0.3",
    "request-promise": "^4.2.4",
    "style-dictionary": "^2.6.2",
    "styled-components": "^4.0.2",
    "svgo": "^1.2.1",
    "xstate": "^3.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.4.0",
    "@commitlint/config-conventional": "^7.3.1",
    "babel-jest": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^23.0.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.14.2",
    "react-test-renderer": "^16.8.2"
  },
  "scripts": {
    "tokens:build": "npx style-dictionary build --config ./packages/tokens/config.js",
    "tokens:clean": "test -d 'packages/tokens/build/' && npx style-dictionary clean --config ./packages/tokens/config.js || echo 'nothing to clean'",
    "tokens:clean-build": "yarn tokens:clean && yarn tokens:build",
    "assets:upload": "node ci/assets.js",
    "clean-cache": "npx gatsby clean",
    "css:fix": "npx stylelint npx stylelint src/pages/**/previews/*.scss packages/styles/**/*.scss --fix",
    "css:lint": "npx stylelint npx stylelint src/pages/**/previews/*.scss packages/styles/**/*.scss",
    "icons:clean": "node iconCompiler/svg-cleaner.js",
    "icons:datas": "node iconCompiler/generateIconsDatas.js",
    "icons:build": "yarn icons:clean && yarn icons:datas && cp -R static/icons/. packages/icons/",
    "prebuild": "yarn tokens:build && yarn icons:build",
    "lerna": "npx lerna clean -y && npx lerna bootstrap",
    "build": "npx gatsby build",
    "develop": "npx gatsby develop",
    "format": "prettier --write '**/*.js'",
    "test": "jest",
    "predevelop": "yarn clean-cache && yarn tokens:clean-build && yarn icons:build",
    "release": "lerna version --conventional-commits --changelog-preset angular --message 'chore(release): publish %s' --github-release prerelease",
    "npm:publish": "lerna publish --from-package"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "stylelint",
      "git add"
    ],
    "*.js": [
      "yarn format",
      "git add"
    ]
  },
  "browserslist": "> 1%",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
