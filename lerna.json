{
  "version": "1.8.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "useWorkspaces": true
}
